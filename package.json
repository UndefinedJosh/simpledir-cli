{
  "name": "simpledir",
  "version": "1.1.0",
  "description": "SimpleDir is a CLI tool for managing directories and files.",
  "main": "dist/index.js",
  "bin": {
    "simpledir": "./dist/index.js",
    "sid": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "author": "Karxem",
  "license": "MIT",
  "repository": "https://github.com/karxem/simpledir-cli",
  "homepage": "https://github.com/Karxem/simpledir-cli/blob/main/README.md",
  "dependencies": {
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5"
  }
}
